Tables for database

CREATE TABLE user_rank (
	id INTEGER PRIMARY KEY,
	rank VARCHAR(20) NOT NULL UNIQUE
);

INSERT INTO USER_RANK (id, rank) 
VALUES 
(1, 'customer'),
(2, 'admin');


CREATE TABLE users (
	username VARCHAR(50) NOT NULL.
	fullname VARCHAR(50) NOT NULL.
	password VARCHAR(50) NOT NULL,
	email VARCHAR(255) NOT NULL,
	phone_num VARCHAR(50) NOT NULL,
	rank  INT DEFAULT 1 NOT NULL,
	gender VARCHAR(1) NOT NULL,
	PRIMARY KEY (username)
	FOREIGN KEY (rank) REFERENCES user_rank(id)
	);


CREATE TABLE movies (
	movie_id INT NOT NULL IDENTITY(1,1),
	movie_name VARCHAR(50) NOT NULL,
	movie_language VARCHAR(50) NOT NULL,
	movie_duration INT NOT NULL,
	movie_type VARCHAR(50) NOT NULL,
	movie_release_date DATE NOT NULL,
	movie_tickets INT NOT NULL DEFAULT 50,
	PRIMARY KEY (movie_id),
	)
